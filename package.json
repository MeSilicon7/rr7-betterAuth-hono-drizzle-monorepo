{
  "name": "rr7-cloudflare-workers-monorepo",
  "description": "A simple monorepo using React Router 7 and Cloudflare Workers",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "build": "bun --filter \"*\" build",
    "dev": "bun --filter \"*\" dev",
    "db-gen": "cd backend && bun run drizzle-kit generate",
    "db-migrate": "cd backend && bun run drizzle-kit migrate",
    "deploy": "bun --filter \"*\" deploy",
    "clean": "rm -rf node_modules .turbo dist",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css}": "echo 'Linting...'"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4"
  }
}
